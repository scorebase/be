{
  "name": "scorebase_api",
  "version": "0.0.1",
  "description": "Scorebase",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index",
    "start": "node index",
    "test:unit": "NODE_ENV=test nyc _mocha test/unit/* --exit",
    "test:integration": "NODE_ENV=test nyc _mocha test/integration/* --timeout 7500 --exit",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scorebase/be.git"
  },
  "author": "Scorebase Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/scorebase/be/issues"
  },
  "homepage": "https://github.com/scorebase/be#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-joi-validation": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nanoid": "^3.3.4",
    "node-cache": "^5.1.2",
    "sequelize": "^7.0.0-alpha.2",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "8.22.0",
    "husky": "^1.3.1",
    "joi": "^17.6.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "nyc": "^15.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint . --fix --quiet",
